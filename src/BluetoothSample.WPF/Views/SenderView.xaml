<UserControl x:Class="BluetoothSample.Views.SenderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             DataContext="{Binding SenderViewModel, Source={StaticResource Locator}}"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="400">
    <StackPanel Margin="20" Orientation="Vertical">
        <TextBlock>I am the Sender.</TextBlock>
        <TextBlock Margin="0,20,0,0">Select one device:</TextBlock>
        <ListBox Margin="0,20,0,0" 
                 ItemsSource="{Binding Devices}"
                 SelectedItem="{Binding SelectDevice}"
                
                 HorizontalAlignment="Left"
                 MaxWidth="200" Width="200"
                 Height="100" MaxHeight="100"/>
        <TextBlock Margin="0,20,0,0" Text="Write the data to send:"/>
        <TextBox Margin="0,20,0,0" Text="{Binding Data, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        <Button Margin="0,20,0,0" 
                HorizontalAlignment="Right"
                Width="50" Content="Send" Command="{Binding SendCommand}"/>
        <TextBlock Margin="0,20,0,0"  Text="Result:"/>
        <TextBlock Margin="0,10,0,0"  Text="{Binding ResultValue}"/>
    </StackPanel>
</UserControl>
